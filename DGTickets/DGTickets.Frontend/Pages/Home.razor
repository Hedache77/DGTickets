@page "/" 
<AuthorizeView>
    <Authorized Context="authContext">
        <MudButton Variant="Variant.Outlined"
                   EndIcon="@Icons.Material.Filled.Add"
                   Color="Color.Info" OnClick="@(() => ShowModalAsync())">
            @Localizer["New"] @Localizer["Ticket"]
        </MudButton>
        <br />
    </Authorized>
    <NotAuthorized>
        <MudAlert Severity="Severity.Warning">@Localizer["PermissionTicket"]</MudAlert>
    </NotAuthorized>
</AuthorizeView>
<br />
<MudCard Style="height: 100%; display: flex; justify-content: center; align-items: center;">
