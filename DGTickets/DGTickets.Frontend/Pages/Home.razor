        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Localizer["LastShiftCalledAtTheCashier"]</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Align="Align.Center">A43</MudText>
        <MudText Align="Align.Center" Typo="Typo.body2">johndae@gmail.com</MudText>
    </MudCardContent>
</MudCard>
<br />
<MudCard Style="height: 100%; display: flex; flex-direction: column; justify-content: space-between; align-items: center;">
    <MudCardHeader>
