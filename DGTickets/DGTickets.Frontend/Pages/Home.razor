@page "/"

<PageTitle>Home</PageTitle>

<AuthorizeView Roles="Admin">
    <Authorized>
        <p>Estas autenticado y autorizado, @context.User.Identity?.Name</p>
    </Authorized>
    <NotAuthorized>
        <p>@Localizer["NotAuthorized"]</p>
    </NotAuthorized>

</AuthorizeView>



<h1>@Localizer["Title"]</h1>
<h2>@Localizer["Subtitle"]</h2>

